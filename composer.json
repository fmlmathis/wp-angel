{
  "name": "angel-start/wp-angel",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate for Angel Start with modern development tools and improved folder structure",
  "homepage": "https://angel-start.com",
  "authors": [
    {
      "name": "Angel Start Team",
      "email": "contact@angel-start.com",
      "homepage": "https://angel-start.com"
    }
  ],
  "keywords": [
    "bedrock",
    "composer",
    "roots",
    "wordpress",
    "wp",
    "wp-config",
    "angel-start"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "^2.2",
    "humanmade/s3-uploads": "~3.0",
    "oscarotero/env": "^2.1.0",
    "roots/wordpress": "6.8.0",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.2.0",
    "vlucas/phpdotenv": "^5.6.0",
    "wp-cli/wp-cli-bundle": "2.11.*",
    "wpackagist-plugin/mailgun": "2.1.6",
    "wpackagist-plugin/polylang": "^3.7"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4.2",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
